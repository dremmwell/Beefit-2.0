generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  sessions Session[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user User @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Ingredient {
  id           String @id @unique @default(uuid())
  name         String
  unit         String
  gramsPerUnit Float
  calories     Int
  proteins     Float
  carbs        Float
  fats         Float
}
